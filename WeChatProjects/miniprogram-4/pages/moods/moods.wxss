/* pages/moods/moods.wxss */
.page__container {
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 5vw;
  box-sizing: border-box;
  position: relative;
  background: linear-gradient(#2a0845, #6441A5);
  
}

.card-product {
  overflow: hidden;
  height: 120px;
  width: 100%;
  margin-top: 10px;
  border-radius: 10px;
  background: linear-gradient(145deg, #5a3b95, #6b46b1);
  box-shadow:  25px 25px 51px #55378c, 
             -25px -25px 51px #734bbe;
  display: flex;
  align-items: center;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;

}

.card-product .h2 {
  font-size: 16px;
  font-weight: bold;
  color: aliceblue;
  display: block;
  margin: 0;
}

.card-product .product-description {
  font-size: 12px;
  color: aliceblue;
  line-height: 1.4;
  display: block;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 8px;
}

.card-product .card-product-infos {
  padding: 16px;
}
