/* pages/index/Index.wxss */

page {
  background-color: #fafafa;
}

.card-product {
  overflow: hidden;
  height: 120px;
  width: 100%;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
}

.card-product-infos {
  padding: 16px;
  display: flex;
}

.card-image {
  display: block;
  width: 120px;
  height: 120px;
  padding: 10rpx;
  object-fit: cover;
}

.card-product .h2 {
  font-size: 16px;
  display: block;
  font-weight: bold;
  padding: 10rpx;
  margin: 0;
}

.card-product .p {
  font-size: 12px;
  line-height: 1.4;
  color: black;
  opacity: .7;
  display: flex;
  margin-bottom: 0;
  margin-top: 8px;
}
